pipeline{
    agent any
    tools{
        maven 'M2_HOME'
    }
    stages{
        stage('sonar-scan'){
            steps{
                withSonarQubeEnv('sonarQube'){
                sh 'mvn verify org.sonarsource.scanner.maven:sonar-maven-plugin:sonar -Dsonar.projectKey=kleric1993_reW16-geo-app'
                }
            }
        }
        stage("maven"){
            steps{
            sh 'mvn clean validate compile install test package'
            }
        }
        stage('upload artifact'){
             steps{
                sh 'curl -uadmin:AP4tbU8yG28DhL74UFcmddLM23r -T \
                target/bio*.jar \
                 "http://3.84.237.213:8081/artifactory/geolocation/geo/bio_${BUILD_ID}.jar"'
             }
        }
        stage('docker login'){
            steps{
                sh 'aws ecr get-login-password --region us-east-1 | \
                docker login --username AWS --password-stdin \
                028521068598.dkr.ecr.us-east-1.amazonaws.com'
            }
        }
        stage('docker image build'){
            steps{
                sh 'docker build -t utc-app-dev:v.${BUILD_ID} .'
            }
        }
        stage('docker tagging'){
            steps{
                sh 'docker tag utc-app-dev:latest \
                028521068598.dkr.ecr.us-east-1.amazonaws.com/utc-app-dev:latest '
                sh 'docker tag utc-app-dev:latest \
                028521068598.dkr.ecr.us-east-1.amazonaws.com/utc-app-dev:v.${BUILD_ID} '
            }
        }
        stage('push image'){
            steps{
                sh 'docker push 028521068598.dkr.ecr.us-east-1.amazonaws.com/utc-app-dev:latest'
                sh 'docker push 028521068598.dkr.ecr.us-east-1.amazonaws.com/utc-app-dev:v.${BUILD_ID}'
            }
        }
             
    }
}